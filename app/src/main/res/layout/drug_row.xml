<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/drug_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="13dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pills"
        android:id="@+id/drug_img" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/drug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.drug_name"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/drug_delete_btn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="删除"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/drug_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="drug_info"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产日期: 2017-1-1"
                android:textColor="#a9a9a9"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/storage_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保质期: 12月"
                android:textColor="#a9a9a9"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>