<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.littlepage.drug_manage_system_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Drugmanagesystemandroid">
        <activity android:name=".pages.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pages.RegisterActivity"></activity>
        <activity android:name=".pages.AdminMenuActivity"></activity>
        <activity android:name=".pages.CommonMenuActivity"></activity>
        <activity android:name=".pages.DrugListActivity"></activity>
        <activity android:name=".pages.UserListActivity"></activity>
        <activity android:name=".pages.DrugAddActivity"></activity>
        <activity android:name=".pages.DrugPurchaseListActivity"></activity>
        <activity android:name=".pages.DrugHasPurchaseListActivity"></activity>
        <activity android:name=".pages.CommentActivity"></activity>
        <activity android:name=".pages.ShowCommentListActivity"></activity>
        <activity android:name=".pages.DrugCommentActivity"></activity>
        <activity android:name=".pages.ShowDrugCommentListActivity"></activity>
    </application>
</manifest>